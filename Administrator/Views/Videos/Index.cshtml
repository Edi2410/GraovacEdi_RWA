@model Administrator.ViewModels.VideosVM

@{
    ViewData["Title"] = "Videos";
}

<h1>Videos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model.Videos)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img src="@item.ImageId" class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text"><strong>Duration:</strong> @item.TotalSeconds seconds</p>
                    <p class="card-text"><strong>Genre:</strong> @item.Genre.Name</p>
                    <a href="@item.StreamingUrl" class="btn btn-primary">Watch</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </div>
                <div class="card-footer text-muted">
                    Created at: @item.CreatedAt.ToString("dd/MM/yyyy")
                </div>
            </div>
        </div>
    }
</div>
